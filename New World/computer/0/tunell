function bom()
  turtle.dig()
  sleep(0.5)
  while turtle.detect() do
    turtle.dig()
    sleep(0.5)
  end
  turtle.forward()
  turtle.digUp()
  turtle.digDown()
  while turtle.detectUp() do
    turtle.digUp()
    sleep(0.5)
  end
end
print ("Welcom in 1x3 tuneler")
print ("I need Lenght")
n=read()
for i=1,n do
  bom()
end
