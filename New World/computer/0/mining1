
function bom()
  turtle.dig()
  sleep(0.5)
  while turtle.detect() do
    turtle.dig()
    sleep(0.5)
  end
  turtle.forward()
  turtle.digUp()
  turtle.digDown()
  while turtle.detectUp() do
    turtle.digUp()
    sleep(0.5)
  end
end
bom()
turtle.turnLeft()
bom()
turtle.turnRight()
bom()
bom()
bom()
turtle.turnRight()
bom()
turtle.turnRight()
bom()
bom()
turtle.forward()
turtle.turnLeft()
bom()
turtle.turnLeft()
bom()
bom()
bom()
turtle.turnRight()
bom()
turtle.turnRight()
bom()
bom()
bom()

