
function bom()
  turtle.dig()
  sleep(0.5)
  while turtle.detect() do
    turtle.dig()
    sleep(0.5)
  end
  turtle.forward()
  turtle.digUp()
  turtle.digDown()
  while turtle.detectUp() do
    turtle.digUp()
    sleep(0.5)
  end
end
print ("Welcom in 3x3 tuneler")
print ("I need Lenght")
n=read()
for i=1,n do
  bom()
end
turtle.turnRight()
bom()
turtle.turnRight()
k=n-1
i=o
for i=1,k do
  bom()
end
turtle.turnLeft()
bom()
turtle.turnLeft()
i=0
for i=1,k do
  bom()
end
turtle.turnLeft()
turtle.forward()
turtle.forward()
turtle.turnRight()
